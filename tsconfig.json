{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "akita-filters-plugin": [
        "projects/akita-filters-plugin/src/lib/index.ts"
      ],
      "akita-filters-plugin/datasource": [
        "projects/akita-mat-datasource/src/lib/index.ts"
      ]
    }
  }
}
